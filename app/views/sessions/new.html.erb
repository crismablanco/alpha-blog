<h1 align="center">Log in</h1>

<div class="row">
  <div class="col-md-12"> 
    <%= form_for(:session, url: login_path) do |f| %>
      
      <div class="form-group row">
        <%= f.label :email, class:"col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true  %>  
        </div>
      </div>
      
      <div class="form-group row">
        <%= f.label :password, class:"col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.password_field :password, class: "form-control", autocomplete: "off" %>  
        </div>
      </div>
      
      <div class="form-group row">
        <div class="offset-md-2 col-md-8">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4 offset-md-4">
    [ <%= link_to "Cancel request and return to article list", articles_path %> ]
  </div>

</div>