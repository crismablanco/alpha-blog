
<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-md-12"> 
    <%= form_for @category do |f| %>
      <div class="form-group row">
        <%= f.label :name, class:"col-md-2 col-form-label" %>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control", placeholder: "Category name" %>  
        </div>
      </div>
      
      <div class="form-group row">
        <div class="offset-md-2 col-md-8">
          <%= f.submit "Create category", class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-4 offset-md-4">
    [ <%= link_to "Cancel request and return to article list", articles_path %> ]
  </div>

</div>