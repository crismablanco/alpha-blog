
<% if @article.errors.any? %>
  <h2>Ocurrieron los siguientes errores, no se pudo guardar</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %> </br>
    <%= f.text_field :title %>  
  </p>
  
  <p>
    <%= f.label :description %> </br>
    <%= f.text_area :description, size: "60x12" %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>

